generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       String            @id @default(cuid())
  name     String            @unique
  desc     String
  imgUrl   String
  category String
  sellers  ProductBySeller[]
}

model User {
  id              String            @id @default(cuid())
  firstName       String
  lastName        String
  email           String            @unique
  password        String
  subscribed      Boolean           @default(false)
  status          Status            @default(CLIENT)
  estDeliveryTime Int?
  Package         Package[]
  products        ProductBySeller[]
}

model ProductBySeller {
  id        String  @id @default(cuid())
  productId String
  sellerId  String
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
  product   Product @relation(fields: [productId], references: [id])
  seller    User    @relation(fields: [sellerId], references: [id])
  orders    Order[] @relation("OrderToProductBySeller")
}

model Order {
  id        Int               @id @default(autoincrement())
  price     Decimal           @db.Decimal(10, 2)
  orderDate DateTime
  paid      Boolean
  packages  Package[]
  products  ProductBySeller[] @relation("OrderToProductBySeller")
}

model Package {
  id           Int      @id @default(autoincrement())
  length       Float
  width        Float
  height       Float
  weight       Float
  address      String
  deliveryDate DateTime
  orderId      Int
  deliveryId   String
  User         User     @relation(fields: [deliveryId], references: [id])
  order        Order    @relation(fields: [orderId], references: [id])
}

enum Status {
  CLIENT
  SELLER
  MARKETPLACE
  DELIVERY
}
