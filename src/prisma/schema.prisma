generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       String            @id @default(cuid())
  name     String            @unique
  desc     String
  imgUrl   String
  category String
  sellers  ProductBySeller[]
}

model User {
  id              String            @id @default(cuid())
  firstName       String
  lastName        String
  email           String            @unique
  password        String

  // Pour CLIENT
  subscribed      Boolean           @default(false)
  status          Status            @default(CLIENT)
  orders          Order[]

  // Pour SELLER
  estDeliveryTime Int?              
  products        ProductBySeller[]

  // Pour DELIVERY
  packages        Package[]
}

model ProductBySeller {
  id        String  @id @default(cuid())
  productId String
  sellerId  String
  quantity  Int
  price     Decimal @db.Decimal(10, 2)
  product   Product @relation(fields: [productId], references: [id])
  seller    User    @relation(fields: [sellerId], references: [id])
  orders    Order[] @relation("OrderToProductBySeller")
}

model Order {
  id        Int               @id @default(autoincrement())
  price     Decimal           @db.Decimal(10, 2)
  orderDate DateTime
  paid      Boolean
  buyerId   String
  buyer     User              @relation(fields: [buyerId], references: [id])
  packages  Package[]
  products  ProductBySeller[] @relation("OrderToProductBySeller")
}

model Package {
  id            Int      @id @default(autoincrement())
  address       String
  deliveryDate  DateTime
  orderId       Int
  deliveryManId String
  deliveryMan   User     @relation(fields: [deliveryManId], references: [id])
  order         Order    @relation(fields: [orderId], references: [id])
}

enum Status {
  CLIENT
  SELLER
  MARKETPLACE
  DELIVERY
}
